local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Pilgrammed.exe",
    LoadingTitle = "Pilgrammed.exe",
    LoadingSubtitle = "Like and subscribe",
    ConfigurationSaving = {Enabled = false},
    KeySystem = false,
})

local CombatTab = Window:CreateTab("Combat", 4483362458)

local remote = game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Block")
local args = {true}
local parryConnection = nil

-- Perfect parry: detects attacks and times blocks precisely
local function startPerfectParry()
    if parryConnection then return end
    
    local lastParry = 0
    parryConnection = game:GetService("RunService").Heartbeat:Connect(function()
        -- Cooldown between parries
        if tick() - lastParry < 0.15 then return end
        
        local char = game.Players.LocalPlayer.Character
        if not char or not char:FindFirstChild("HumanoidRootPart") then return end
        
        local root = char.HumanoidRootPart
        
        -- Detect incoming attacks/projectiles
        for _, v in pairs(workspace:GetDescendants()) do
            if v:IsA("BasePart") then
                local isAttack = v.Name:match("Projectile") or v.Name:match("Attack") or v.Name:match("Hitbox")
                if isAttack and (v.Position - root.Position).Magnitude < 12 then
                    -- Fire once at perfect timing
                    remote:FireServer(unpack(args))
                    lastParry = tick()
                    break
                end
            end
        end
